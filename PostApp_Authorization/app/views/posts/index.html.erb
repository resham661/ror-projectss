<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.user_id %></td>
        <td><%= link_to 'Show', post %></td>
        <td><% if can? :update, post %> <%= link_to 'Edit', edit_post_path(post) %><% end %></td>
        <td><% if can? :destroy, post %><%= link_to "Destroy", destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New post", new_post_path %>
